<h1><%= @project.name %></h1>

<% if @project.employees.any?%>
  <h4>Here are the employees for this project</h4>

  <% @project.each do |employee|%>
  <ul>
    <li>
    <%= link_to employee.name, project_employee_path(@project, employee) %>
    </li>
  </ul>
  <% end %>
<% else %>
  <p> No employees are listed for this project</p>
<% end %>

<p><%= link to "Add an employee to the project", new_project_employee_path(@project) %></p>

<p><%= link_to "Edit", edit_project_path(@project)%></p>
<p><%= link_to "Delete", project_path(@project),
                          :data => {:confirm => "you sure?",
                                    :method => "delete"}%></p>

